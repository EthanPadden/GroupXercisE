<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupActivity">
    <TableLayout
        android:id="@+id/table_group_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow android:layout_margin="5dp">

            <TextView
                android:gravity="center"
                android:text="Group name:" />

            <TextView
                android:id="@+id/text_group_name"
                android:gravity="center" />

        </TableRow>
        <TableRow android:layout_margin="5dp">

            <TextView
                android:gravity="center"
                android:text="Creator:" />

            <TextView
                android:id="@+id/text_creator"
                android:gravity="center" />

        </TableRow>

        <TableRow android:layout_margin="5dp">

            <TextView
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="Members" />
        </TableRow>

    </TableLayout>

    <ListView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/list_members"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@id/table_group_details"
        tools:context="com.nova.groupxercise.GroupActivity" />

</RelativeLayout>